<div class="col-lg-3">
	<h2>User info</h2>
	<%= attachment_image_tag user, :profile_image, :size => '250x250', fallback: "noimage.png" %>
	<table class="table">
		<tbody>
			<tr>
				<td>name</td>
				<td><%= user.name %></td>
			</tr>
			<tr>
				<td>introduction</td>
				<td><%= user.introduction %></td>
			</tr>
			<tr>
				<td>フォロー</td>
				<td><%= link_to "#{@user.followings.count}人", user_following_path(user.id) %></td>
			</tr>
			<tr>
				<td>フォロワー</td>
				<td><%= link_to "#{@user.followers.count}人", user_followers_path(user.id) %></td>
			</tr>
		</tbody>
	</table>
	<%= link_to "#{user.name}の投稿一覧", user_path(user.id), class:"btn btn-info" %><br>
	<% if user.id == current_user.id %>
	<%= link_to "ユーザー情報編集", edit_user_path(user.id), class:"btn btn-warning" %>
	<% end %>
</div>