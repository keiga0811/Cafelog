<div class="container">
	<div class="row">

		<%= render "users/userinfo", user: @user %>

		<div class="col-lg-9">
			<table class="table">
				<thead>
					<h2>Users</h2>
					<tr>
						<th  width="300">Image</th>
						<th  width="300">User_name</th>
						<th  width="300"></th>
					</tr>
				</thead>
				<% @users.each do |user| %>
				<tbody>
					<tr>
						<td><%= attachment_image_tag user, :profile_image, :size => '50x50', fallback: "noimage.png" %></td>
						<td><%= user.name %></td>
						<td><%= link_to "投稿を見る", user_path(user.id)%></td>
					</tr>
				</tbody>
				<% end %>
			</table>
		</div>
	</div>
</div>