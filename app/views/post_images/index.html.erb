<div class="wrapper-contents">
	<div class="container">
		<div class="row">

			<%= render "users/userinfo", user: @user %>

			<div class="col-lg-9">
				<h2>All the posts</h2>
				<% @posts.each do |post| %>
				    <%=link_to post_image_path(post.id) do %>
					<%= attachment_image_tag post, :image, format: 'jpeg', size: "200x200" %>
					<% end %>
				<% end %>
				<div>
					<%= paginate @posts %> <!-- ページネーション -->
				</div>
			</div>
		</div>
	</div>
</div>